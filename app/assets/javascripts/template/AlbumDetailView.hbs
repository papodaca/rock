<div class="span3">
  <div class="pin">
    <img src="{{art}}"></img>
    <div class="caption">
      <p class="description">{{name}}</p>
      <p class="description"><i class="icon-user"/> {{artist}}</p>
      <p class="description">Tracks: {{tracks}} - {{length}}</p>
      <div class="center">
        <button class="btn btn-small btn-success"><i class="icon-play-circle"></i> Play</button>
        <button class="btn btn-small btn-info"><i class="icon-plus-sign"></i> Add</button>
      </div>
    </div>
  </div>
</div>
<div class="span8">
  <table class="table table-condensed table-bordered table-striped">
    <thead>
      <tr>
        <th style="width: 1px;"></th>
        <th class="span3">Title</th>
        <th class="span1">Length</th>
        <th class="span2">Genre</th>
      </tr>
    </thead>
    <tbody>
      {{#each songs}}
      <tr>
        <td><a class="link pointer play"><i class="icon-play-circle"></i></a></td>
        <td>{{title}}</td>
        <td>{{length}}</td>
        <td>{{genre}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
